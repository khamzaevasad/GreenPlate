<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe Web App</title>
    <!-- style -->
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <!-- header start -->
    <header class="container">
      <!-- navbar -->
      <nav class="navbar">
        <div class="navbar-start">
          <a href="./index.ejs">
            <img src="/images/logo.svg" alt="heder-logo" />
          </a>
        </div>
        <div class="navbar-center">
          <a class="menu-subtitle" href="./index.ejs">Home</a>
          <a class="menu-subtitle" href="./about.ejs">About</a>
          <a class="menu-subtitle" href="./recipes.ejs">Recipes</a>
        </div>
        <div class="navbar-end">
          <a class="btn-xs navbar-btn" href="#">Browse recipe</a>
        </div>

        <!-- Hamburger (mobile) -->
        <div class="hamburger" id="hamburger">
          <span class="hamburger-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="16"
              fill="none"
              viewBox="0 0 18 16"
            >
              <path
                fill="#163A34"
                fill-rule="evenodd"
                d="M17 16H1a1 1 0 1 1 0-2h16a1 1 0 1 1 0 2ZM17 2H1a1 1 0 1 1 0-2h16a1 1 0 1 1 0 2ZM17 9H1a1 1 0 1 1 0-2h16a1 1 0 1 1 0 2Z"
                clip-rule="evenodd"
              />
            </svg>
          </span>
        </div>
      </nav>

      <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
          <span id="closeBtn">‚úñ</span>
        </div>
        <a class="menu-subtitle" href="#">Home</a>
        <a class="menu-subtitle" href="#">About</a>
        <a class="menu-subtitle" href="#">Recipes</a>
        <a class="menu-subtitle" href="#">Browse recipe</a>
      </div>

      <!-- Overlay -->
      <div class="overlay" id="overlay"></div>
    </header>
    <!-- header end -->

    <!-- main start -->
    <main class="main">
      <!-- detail info -->
      <section class="container">
        <div class="info-container">
          <!-- img wrapper -->
          <div class="info-img-wrapper">
            <img class="info-img" src="<%= item.image.large%>" alt="img" />
          </div>
          <!-- info items -->
          <div class="info-items-container">
            <!-- header -->
            <div class="info-header">
              <h3 class="info-title"><%= item.title%></h3>
              <p class="info-subtitle"><%= item.overview%></p>
              <!-- time info -->
              <div class="time-info">
                <!-- serving icon -->
                <div class="info-wrapper-time">
                  <span
                    ><svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      fill="none"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill="#163A34"
                        fill-rule="evenodd"
                        d="M9.76 10.595c2.08 0 3.76-1.68 3.76-3.76.08-2.08-1.6-3.76-3.76-3.76-2.08 0-3.76 1.68-3.76 3.76s1.68 3.76 3.76 3.76ZM15.28 15.636c-.24-.88-.72-1.68-1.68-2.32-.8-.56-2.08-.96-3.84-.96-3.44 0-5.12 1.6-5.6 3.28-.16.48.08.96.48 1.2 1.44.96 3.2 1.44 5.12 1.44 1.84 0 3.6-.56 5.04-1.44.4-.24.64-.72.48-1.2Z"
                        clip-rule="evenodd"
                      /></svg
                  ></span>
                  <!-- title -->
                  <p class="subtitle">
                    Servings: <span class="serving"><%= item.servings%></span>
                  </p>
                </div>

                <div class="info-wrapper-time">
                  <!-- prep time -->
                  <span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="21"
                      height="20"
                      fill="none"
                      viewBox="0 0 21 20"
                    >
                      <path
                        fill="#163A34"
                        fill-rule="evenodd"
                        d="M13.002 13.088a.618.618 0 0 1-.859.216l-2.275-1.366a.616.616 0 0 1-.308-.534V8.463a.624.624 0 1 1 1.25 0v2.583l1.975 1.192c.3.175.4.558.217.85Zm-2.675-8.892a6.658 6.658 0 0 0-6.65 6.65 6.658 6.658 0 0 0 6.65 6.65 6.658 6.658 0 0 0 6.65-6.65 6.658 6.658 0 0 0-6.65-6.65ZM5.864 3.669a.624.624 0 1 0-.657-1.064A9.665 9.665 0 0 0 2.316 5.36a.625.625 0 0 0 1.032.705 8.422 8.422 0 0 1 2.516-2.396ZM18.349 5.36a9.613 9.613 0 0 0-2.901-2.764.626.626 0 0 0-.654 1.066 8.351 8.351 0 0 1 2.522 2.402.623.623 0 0 0 .868.164.625.625 0 0 0 .165-.868Z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </span>
                  <!-- title -->
                  <p class="subtitle">
                    Prep: <span class="prep"><%= item.prepMinutes%></span>
                  </p>
                </div>

                <div class="info-wrapper-time">
                  <!-- cook time -->
                  <span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      fill="none"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill="#163A34"
                        d="M7.222 2.097a.625.625 0 1 0-.884.884.37.37 0 0 1 0 .524 1.621 1.621 0 0 0 0 2.293.625.625 0 1 0 .883-.884.37.37 0 0 1 0-.525 1.62 1.62 0 0 0 0-2.292ZM15.461 4.906a.625.625 0 1 0-.883-.884 1.62 1.62 0 0 0 0 2.293.625.625 0 0 0 .883-.885.37.37 0 0 1 0-.524ZM3.503 5.43a.625.625 0 0 0-.884.884.37.37 0 0 1 0 .524.625.625 0 0 0 .884.885 1.62 1.62 0 0 0 0-2.293Z"
                      />
                      <path
                        fill="#163A34"
                        fill-rule="evenodd"
                        d="M10 5.218c-.955 0-1.727.774-1.727 1.728v.568c-3.156.669-5.525 3.129-5.347 6.095.013.22.195.392.416.392h13.316c.22 0 .403-.172.416-.392.178-2.966-2.192-5.426-5.347-6.095v-.568c0-.954-.774-1.728-1.727-1.728Zm.477 2.13v-.402a.478.478 0 1 0-.954 0v.401a8.45 8.45 0 0 1 .954 0Z"
                        clip-rule="evenodd"
                      />
                      <path
                        fill="#163A34"
                        d="M2.332 15.07a.915.915 0 0 1 .585-.188h14.166c.21 0 .417.053.585.188a.84.84 0 0 1 .29.488c.07.32-.01.684-.106.972a1.974 1.974 0 0 1-1.872 1.349H4.02a1.973 1.973 0 0 1-1.872-1.349c-.096-.288-.175-.651-.106-.972a.84.84 0 0 1 .29-.488Z"
                      />
                    </svg>
                  </span>
                  <!-- title -->
                  <p class="subtitle">
                    Cook: <span class="cook"><%= item.cookMinutes%></span>
                  </p>
                </div>
              </div>
            </div>
            <!-- body -->
            <div class="body-info">
              <h4 class="body-title">Ingredients:</h4>
              <!-- recipes -->
              <div class="body-detail">
                <%item.ingredients.forEach((el) => {%>
                <div class="recipe-wrapper">
                  <div class="info-subtitle recipes">
                    <span>
                      <img
                        class="icon-point"
                        src="/images/icon-bullet-point.svg"
                        alt="icon"
                      />
                    </span>
                    <span> <%= el%></span>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
            <!-- instruction -->
            <div class="body-info">
              <h4 class="body-title">Instructions:</h4>
              <!-- recipes -->
              <div class="body-detail">
                <%item.instructions.forEach((el) => {%>

                <div class="recipe-wrapper">
                  <div class="info-subtitle recipes">
                    <span>
                      <img
                        class="icon-point"
                        src="/images/icon-bullet-point.svg"
                        alt="icon"
                      />
                    </span>
                    <span> <%= el%></span>
                  </div>
                </div>
                <%})%>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- main end -->

    <!-- footer start -->
    <footer>
      <div class="footer-container container">
        <div class="footer-title">Made with ‚ù§Ô∏è and ü•ë</div>
        <div class="footer-icons">
          <img src="/images/icon-instagram.svg" alt="instagram" />
          <img src="/images/icon-tiktok.svg" alt="icon-tiktok" />
          <img src="/images/icon-bluesky.svg" alt="blusky" />
        </div>
      </div>
    </footer>

    <!-- footer end -->

    <!-- <script type="module" src="/js/index.js"></script> -->
  </body>
</html>
