<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe Web App</title>
    <!-- style -->
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <!-- header start -->
    <header class="container">
      <!-- navbar -->
      <nav class="navbar">
        <div class="navbar-start">
          <a href="./index.ejs">
            <img src="/images/logo.svg" alt="heder-logo" />
          </a>
        </div>
        <div class="navbar-center">
          <a class="menu-subtitle" href="./index.ejs">Home</a>
          <a class="menu-subtitle" href="./about.ejs">About</a>
          <a class="menu-subtitle" href="./recipes.ejs">Recipes</a>
        </div>
        <div class="navbar-end">
          <a class="btn-xs navbar-btn" href="#">Browse recipe</a>
        </div>

        <!-- Hamburger (mobile) -->
        <div class="hamburger" id="hamburger">
          <span class="hamburger-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="16"
              fill="none"
              viewBox="0 0 18 16"
            >
              <path
                fill="#163A34"
                fill-rule="evenodd"
                d="M17 16H1a1 1 0 1 1 0-2h16a1 1 0 1 1 0 2ZM17 2H1a1 1 0 1 1 0-2h16a1 1 0 1 1 0 2ZM17 9H1a1 1 0 1 1 0-2h16a1 1 0 1 1 0 2Z"
                clip-rule="evenodd"
              />
            </svg>
          </span>
        </div>
      </nav>

      <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
          <span id="closeBtn">‚úñ</span>
        </div>
        <a class="menu-subtitle" href="#">Home</a>
        <a class="menu-subtitle" href="#">About</a>
        <a class="menu-subtitle" href="#">Recipes</a>
        <a class="menu-subtitle" href="#">Browse recipe</a>
      </div>

      <!-- Overlay -->
      <div class="overlay" id="overlay"></div>
    </header>
    <!-- header end -->

    <!-- main start -->
    <main class="main">
      <!-- healthy recipes -->
      <section class="container">
        <div class="healthy-container">
          <h3 class="healthy-title">Explore our simple, healthy recipes</h3>
          <p class="healthy-subtitle">
            Discover eight quick, whole-food dishes that fit real-life schedules
            and taste amazing. Use the search bar to find a recipe by name or
            ingredient, or simply scroll the list and let something delicious
            catch your eye.
          </p>
        </div>
      </section>

      <!-- filter -->
      <section class="container">
        <form class="filter-container">
          <div class="left-selects">
            <div class="select-wrapper">
              <select name="prepTime" id="prepTime">
                <option value="">Max Prep Time</option>
                <option value="15">0 minutes</option>
                <option value="30">5 minutes</option>
                <option value="45">10 minutes</option>
                <option value="">clear</option>
              </select>
            </div>

            <div class="select-wrapper">
              <select name="cookTime" id="cookTime">
                <option value="">Max Cook Time</option>
                <option value="15">0 minutes</option>
                <option value="30">5 minutes</option>
                <option value="45">10 minutes</option>
                <option value="60">15 minutes</option>
                <option value="120">20 minutes</option>
                <option value="">clear</option>
              </select>
            </div>
          </div>

          <div class="input-wrapper">
            <svg
              class="search-icon"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              ></path>
            </svg>
            <input
              type="text"
              placeholder="Search by name or ingredient..."
              name="search"
              id="search"
            />
          </div>
        </form>
      </section>

      <!-- cards -->
      <section class="container">
        <div class="card-container">
          <%items.map((item) => {%>
          <div class="card">
            <!-- card img -->
            <div class="card-img-wrapper">
              <img
                class="card-img"
                src="<%= item.image.large%>"
                alt="food-img"
              />
            </div>
            <!-- card items -->
            <div class="card-items">
              <!-- titles -->
              <div class="card-title-wrapper">
                <h4 class="card-heading"><%= item.title%></h4>
                <p class="card-description"><%= item.overview%></p>
              </div>
              <!-- detail info -->
              <div class="card-detail">
                <div class="detail-start">
                  <img src="/images/icon-servings.svg" alt="icon" />
                  <div class="detail-subtitle">
                    Servings: <span class="serving"><%= item.servings%></span>
                  </div>
                  <img src="/images/icon-prep-time.svg" alt="icon" />
                  <div class="detail-subtitle">
                    Prep:
                    <span class="prep-time"><%= item.prepMinutes%></span> mins
                  </div>
                </div>
              </div>
              <div class="detail-end">
                <img src="/images/icon-cook-time.svg" alt="icon" />
                <div class="detail-subtitle">
                  Prep:
                  <span class="cook-time"><%= item.cookMinutes%></span> min
                </div>
              </div>
            </div>
            <!-- View btn -->
            <a href="#" class="view-btn">View recipe</a>
          </div>

          <%})%>
          <div class="card">
            <!-- card img -->
            <div class="card-img-wrapper">
              <img
                class="card-img"
                src="/images/quinoa-veggie-bowl-large.webp"
                alt="food-img"
              />
            </div>
            <!-- card items -->
            <div class="card-items">
              <!-- titles -->
              <div class="card-title-wrapper">
                <h4 class="card-heading">Mediterranean Chickpea Salad</h4>
                <p class="card-description">
                  A refreshing, protein-packed salad tossed in a lemon-olive oil
                  dressing.
                </p>
              </div>
              <!-- detail info -->
              <div class="card-detail">
                <div class="detail-start">
                  <img src="/images/icon-servings.svg" alt="icon" />
                  <div class="detail-subtitle">
                    Servings: <span class="serving">2</span>
                  </div>
                  <img src="/images/icon-prep-time.svg" alt="icon" />
                  <div class="detail-subtitle">
                    Prep: <span class="prep-time">10</span> min
                  </div>
                </div>
              </div>
              <div class="detail-end">
                <img src="/images/icon-cook-time.svg" alt="icon" />
                <div class="detail-subtitle">
                  Prep: <span class="cook-time">10</span> min
                </div>
              </div>
            </div>
            <!-- View btn -->
            <a href="#" class="view-btn">View recipe</a>
          </div>
        </div>
      </section>
    </main>
    <!-- main end -->

    <!-- footer start -->
    <footer>
      <div class="footer-container container">
        <div class="footer-title">Made with ‚ù§Ô∏è and ü•ë</div>
        <div class="footer-icons">
          <img src="/images/icon-instagram.svg" alt="instagram" />
          <img src="/images/icon-tiktok.svg" alt="icon-tiktok" />
          <img src="/images/icon-bluesky.svg" alt="blusky" />
        </div>
      </div>
    </footer>

    <!-- footer end -->

    <script type="module" src="/js/index.js"></script>
  </body>
</html>
